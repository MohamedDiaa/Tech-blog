<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
  <h2>Edit Post</h2>
</div>

<form action="/edit-post/<%= post._id %>?_method=PUT" method="POST">
  <label for="title"><b>Title</b></label>
  <input type="text" placeholder="Enter your title" name="title" value="<%= post.title %>" />

  <label for="body"><b>Content</b></label>
  <textarea name="body" cols="50" rows="10"><%= post.body %></textarea>

  <input type="submit" value="Add" class="btn" />
</form>
